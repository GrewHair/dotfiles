bindsym $mod+p focus parent
# bindsym $mod+n exec dunstctl close; focus child
bindsym $mod+n focus child

bindsym $mod+minus exec --no-startup-id compton-trans -c -10
bindsym $mod+equal exec --no-startup-id compton-trans -c +10

# "Invert" the titlebar background colors in order to be consistent with qutebrowser's tabs
# (and make the focused but inactive tabs visible as well)
client.focused          $focused.color.border              $unfocused.color.background          $focused.color.text                $focused.color.indicator           $focused.color.child_border
client.focused_inactive $focused_inactive.color.border     $unfocused.color.background $focused_inactive.color.text       $focused_inactive.color.indicator  $focused_inactive.color.child_border
client.unfocused        $unfocused.color.border            $focused.color.background        $unfocused.color.text              $unfocused.color.indicator         $unfocused.color.child_border

# Set size of the window to be teleported (because it often sets it to nearly the screen resolution
# and I want to see the workspace behind
for_window [con_mark="teleport"] resize set 800 600