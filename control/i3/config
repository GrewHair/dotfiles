mode "transient state" {
  bindsym h focus left
  bindsym j focus down
  bindsym k focus up
  bindsym l focus right
  bindsym Shift+h move left
  bindsym Shift+j move down
  bindsym Shift+k move up
  bindsym Shift+l move right
  bindsym bracketleft resize shrink width 6 px or 6 ppt
  bindsym Shift+bracketright resize grow height 6 px or 6 ppt
  bindsym Shift+bracketleft resize shrink height 6 px or 6 ppt
  bindsym bracketright resize grow width 6 px or 6 ppt
  bindsym Ctrl+g mode "default"
  bindsym Escape mode "default"
  bindsym Ctrl+c mode "default"
  bindsym q mode "default"
}

