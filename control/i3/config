bindsym $hyper+$alt+j exec xdotool mousemove_relative 0 $fast
bindsym $hyper+$alt+k exec xdotool mousemove_relative -- 0 -$fast
bindsym $hyper+$alt+l exec xdotool mousemove_relative $fast 0

